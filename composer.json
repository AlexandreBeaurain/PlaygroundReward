{
    "name": "playground/reward",
    "description": "Module managing rewards features",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "playground",
        "reward"
    ],
    "homepage": "https://github.com/gregorybesson/PlaygroundReward",
    "authors": [
        {
            "name": "Greg Besson",
            "email": "gregory.besson@playground.gg",
            "homepage": "http://www.playground.gg"
        }
    ],
    "repositories" : [{
			"type" : "git",
			"url" : "https://github.com/gregorybesson/hybridauth"
		}
	],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5",
		"zendframework/zendframework" : "2.*",
		"playground/core" : "2.*",
		"playground/design" : ">=3.0.0",
		"playground/hybridauth" : "2.*",
		"playground/user" : ">=3.0.0",
		"playground/flow" : "2.*"
    },
    "require-dev" : {
		"phpunit/phpunit" : "4.*",
        "squizlabs/php_codesniffer": "2.*"
	},
    "autoload" : {
		"psr-0" : {
			"PlaygroundReward" : "src/"
		}
	},
	"extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
